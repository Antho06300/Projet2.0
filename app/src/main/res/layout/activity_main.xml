<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anthony.projet.MainActivity">


    <ImageView
        android:layout_width="35dp"
        android:layout_height="60dp"
        android:id="@+id/img1"
        android:src="@drawable/bateau"
        android:clickable="true"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/img7"/>


    <ImageView
        android:layout_width="35dp"
        android:layout_height="80dp"
        android:id="@+id/img2"
        android:src="@drawable/camion"
        android:layout_marginStart="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:id="@+id/img10"
        android:src="@drawable/black"
        android:layout_below="@+id/img1"
        android:layout_alignStart="@+id/img1"
        android:layout_marginTop="40dp" />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:id="@+id/img11"
        android:src="@drawable/blue"
        android:layout_alignTop="@+id/img10"
        android:layout_alignStart="@+id/img2" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:id="@+id/img12"
        android:src="@drawable/green"
        android:layout_alignTop="@+id/img11"
        android:layout_alignStart="@+id/img3" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:id="@+id/img13"
        android:src="@drawable/yellow"
        android:layout_alignTop="@+id/img12"
        android:layout_alignStart="@+id/img6" />

    <TextView
        android:text="1"
        android:textAlignment="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/img10"
        android:layout_alignStart="@+id/img10"
        android:layout_marginTop="52dp"
        android:id="@+id/textView"
        android:layout_alignEnd="@+id/img10"
        android:fontFamily="sans-serif"
        android:textSize="30sp" />

    <TextView
        android:text="2"
        android:textAlignment="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignStart="@+id/img11"
        android:id="@+id/textView3"
        android:layout_alignEnd="@+id/img11"
        android:textSize="30sp"/>

    <TextView
        android:text="3"
        android:textAlignment="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/img12"
        android:id="@+id/textView4"
        android:layout_alignEnd="@+id/img12"
        android:textSize="30sp"/>

    <TextView
        android:text="4"
        android:textAlignment="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignStart="@+id/img13"
        android:id="@+id/textView5"
        android:layout_alignEnd="@+id/img13"
        android:textSize="30sp"/>

    <TextView
        android:text="5"
        android:textAlignment="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/img14"
        android:id="@+id/textView6"
        android:layout_alignEnd="@+id/img14"
        android:textSize="30sp"/>


    <SeekBar
        android:id="@+id/seek1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:progress="20"
        android:secondaryProgress="20"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Jouer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/button"
        android:layout_below="@+id/seek1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:id="@+id/img3"
        android:src="@drawable/fusee"
        android:layout_alignTop="@+id/img7"
        android:layout_marginStart="145dp"
         />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="65dp"
        android:id="@+id/img6"
        android:src="@drawable/taxi2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="210dp"/>

    <ImageView
        android:id="@+id/img7"
        android:src="@drawable/velo"
        android:layout_width="40dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/img6"
        android:layout_marginStart="275dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:id="@+id/img14"
        android:src="@drawable/red"
        android:layout_alignTop="@+id/img13"
        android:layout_alignStart="@+id/img7" />


</RelativeLayout>
